<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FutureV</title>
    <script type="importmap"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&family=Oswald:wght@400;500&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FutureV.styles.css" asp-append-version="true" />
</head>
<body class="fv-body d-flex flex-column min-vh-100">
    <header class="fv-header">
        <nav class="navbar navbar-expand-lg fv-navbar" aria-label="Primary">
            <div class="container fv-navbar__inner">
                <a class="navbar-brand fv-logo" asp-controller="Home" asp-action="Index">FutureV</a>
                <button class="navbar-toggler fv-navbar__toggler" type="button" data-bs-toggle="collapse" data-bs-target="#futurevNav" aria-controls="futurevNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="fv-navbar__icon"></span>
                </button>
                <div class="collapse navbar-collapse fv-navbar__menu" id="futurevNav">
                    <ul class="navbar-nav ms-auto align-items-lg-center gap-lg-4">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Catalog" asp-action="Index">Catalog</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Contact">Contact</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                    </ul>
                    <div class="fv-navbar__cta mt-4 mt-lg-0">
                        <span class="fv-navbar__passphrase">Passphrase:<strong>admin</strong></span>
                        <a class="btn fv-btn-outline" asp-controller="Admin" asp-action="Login">Admin Deck</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="flex-grow-1">
        @RenderBody()
    </main>

    <footer class="fv-footer mt-5">
        <div class="container fv-footer__inner">
            <span>&copy; @DateTime.UtcNow.Year FutureV Labs</span>
            <span class="fv-footer__tagline">Imagining mobility beyond the horizon.</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
