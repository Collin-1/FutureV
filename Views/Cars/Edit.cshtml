@model FutureV.ViewModels.CarInputModel
@{
    ViewData["Title"] = "Edit Futuristic Car";
    var id = ViewBag.Id;
}

<section class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
        <div>
            <h1 class="display-6 mb-0">Edit Futuristic Car</h1>
            <p class="text-muted mb-0">Refresh specs, copy, and gallery assets for this FutureV concept.</p>
        </div>
        <div class="d-flex gap-2">
            <a class="btn btn-outline-secondary" asp-controller="Cars" asp-action="Index">Back to Fleet</a>
            <form method="post" asp-controller="Admin" asp-action="Logout">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-outline-secondary">Sign out</button>
            </form>
        </div>
    </div>

    <form method="post" asp-controller="Cars" asp-action="Edit" asp-route-id="@id" enctype="multipart/form-data">
        <partial name="_CarForm" model="Model" />
        <div class="mt-4 d-flex justify-content-end gap-2">
            <a class="btn btn-light" asp-controller="Cars" asp-action="Index">Cancel</a>
            <button type="submit" class="btn btn-primary">Update Vehicle</button>
        </div>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <partial name="_CarFormScripts" />
}
