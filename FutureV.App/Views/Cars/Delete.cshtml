@model FutureV.Core.Entities.Car
@{
    ViewData["Title"] = "Delete Futuristic Car";
}

@if (Model is null)
{
    <section class="container py-5">
        <div class="alert alert-warning">Vehicle not found.</div>
    </section>
    return;
}

<section class="container py-5">
    <div class="d-flex justify-content-end mb-3">
        <form method="post" asp-controller="Account" asp-action="Logout">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-outline-secondary">Sign out</button>
        </form>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <h1 class="h4">Delete @Model.Name?</h1>
            <p class="text-muted">This removes the vehicle and all associated gallery images from FutureV.</p>
            <dl class="row">
                <dt class="col-sm-3">Tagline</dt>
                <dd class="col-sm-9">@Model.Tagline</dd>
                <dt class="col-sm-3">Base Price</dt>
                <dd class="col-sm-9">@Model.BasePrice.ToString("C0")</dd>
                <dt class="col-sm-3">Autonomy</dt>
                <dd class="col-sm-9">@Model.AutonomyLevel</dd>
            </dl>

            <form method="post" asp-controller="Cars" asp-action="Delete" asp-route-id="@Model.Id" class="d-flex gap-2">
                @Html.AntiForgeryToken()
                <a class="btn btn-outline-secondary" asp-controller="Cars" asp-action="Index">Cancel</a>
                <button type="submit" class="btn btn-danger">Delete Vehicle</button>
            </form>
        </div>
    </div>
</section>
