@using System.Linq
@model FutureV.Core.Entities.Car
@{
    if (Model is not null)
    {
        ViewData["Title"] = Model.Name;
    }
}

@if (Model is null)
{
    <section class="container py-5">
        <div class="alert alert-warning">Vehicle not found.</div>
    </section>
    return;
}

<section class="fv-section">
    <div class="container">
        <div class="fv-page-header">
            <div>
                <p class="fv-section__title">Concept dossier</p>
                <h1 class="fv-title-xl">@Model.Name</h1>
                @if (!string.IsNullOrWhiteSpace(Model.Tagline))
                {
                    <p class="fv-page__lead">@Model.Tagline</p>
                }
            </div>
            @{
                var detailMeta = new[]
                {
                    Model.AutonomyLevel,
                    Model.DriveType,
                    Model.EnergySystem,
                    Model.PowerOutput
                }
                .Where(value => !string.IsNullOrWhiteSpace(value))
                .ToList();
            }
            @if (detailMeta.Count > 0)
            {
                <div class="fv-detail-meta">
                    @foreach (var value in detailMeta)
                    {
                        <span>@value</span>
                    }
                </div>
            }
        </div>
        <div class="row g-5">
            <div class="col-lg-8">
                @if (Model.Images.Count == 0)
                {
                    <div class="fv-pane text-center">
                        <div class="fv-pane__title">Gallery coming soon</div>
                        <p class="fv-pane__info">Visuals will unlock once the concept team releases first renders.</p>
                    </div>
                }
                else
                {
                    <div class="fv-gallery">
                        <div id="catalogCarousel" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner">
                                @for (var i = 0; i < Model.Images.Count; i++)
                                {
                                    var image = Model.Images.ElementAt(i);
                                    var imageSource = image.GetImageSource();
                                    <div class="carousel-item @(i == 0 ? "active" : string.Empty)">
                                        @if (!string.IsNullOrWhiteSpace(imageSource))
                                        {
                                            <img src="@imageSource" class="d-block w-100" alt="@image.ViewAngle view of @Model.Name" />
                                        }
                                        else
                                        {
                                            <div class="ratio ratio-16x9 bg-dark-subtle d-flex align-items-center justify-content-center">
                                                <span class="text-secondary text-uppercase">Image unavailable</span>
                                            </div>
                                        }
                                        <div class="carousel-caption d-none d-md-block">
                                            <h5>@image.ViewAngle</h5>
                                            @if (!string.IsNullOrEmpty(image.Description))
                                            {
                                                <p>@image.Description</p>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#catalogCarousel" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#catalogCarousel" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>
                    </div>
                }
            </div>
            <div class="col-lg-4">
                <div class="fv-pane mb-4">
                    <div class="fv-pane__title">Investment</div>
                    <h2 class="display-6 fw-bold">@Model.BasePrice.ToString("C0")</h2>
                    <div class="fv-metric-grid mt-4">
                        <div class="fv-metric-card">
                            <span>Range</span>
                            <strong>@Model.RangePerCharge km</strong>
                        </div>
                        <div class="fv-metric-card">
                            <span>Top speed</span>
                            <strong>@Model.TopSpeed km/h</strong>
                        </div>
                        <div class="fv-metric-card">
                            <span>0-60 mph</span>
                            <strong>@Model.ZeroToSixty s</strong>
                        </div>
                        <div class="fv-metric-card">
                            <span>Fast charge</span>
                            <strong>@Model.FastChargeMinutes min</strong>
                        </div>
                        <div class="fv-metric-card">
                            <span>Seating</span>
                            <strong>@Model.SeatingCapacity</strong>
                        </div>
                        <div class="fv-metric-card">
                            <span>Release year</span>
                            <strong>@Model.ReleaseYear</strong>
                        </div>
                    </div>
                    <a class="fv-btn mt-4" asp-controller="Home" asp-action="Contact" asp-route-car="@Model.Name">Request prototype</a>
                </div>
                <div class="fv-pane">
                    <div class="fv-pane__title">Storyline</div>
                    <p class="fv-pane__info mb-0">@Model.Narrative</p>
                </div>
            </div>
        </div>
    </div>
</section>
