@{
    ViewData["Title"] = "FutureV";
}

<section class="fv-hero fv-hero--video">
    <video class="fv-hero__video" autoplay muted loop playsinline preload="auto" aria-hidden="true">
        <source src="/videos/Futuristic Car Flies Through City.mp4" type="video/mp4" />
    </video>
    <div class="container">
        <div class="row align-items-center g-5">
            <div class="col-lg-7">
                <div class="fv-hero__content">
                    <p class="fv-hero__kicker">Neon mobility lab</p>
                    <h1 class="fv-hero__title">FutureV</h1>
                    <p class="fv-hero__desc">Experience concept vehicles shaped for orbital skylines and subterranean expressways. FutureV merges autonomous intelligence, plasma propulsion, and couture interiors into one frictionless catalog.</p>
                    <div class="fv-hero__cta">
                        <a class="fv-btn" asp-controller="Catalog" asp-action="Index">View catalog</a>
                        <a class="fv-pill-link" asp-controller="Home" asp-action="Contact">Request prototype</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-5">
                <div class="fv-hero__metrics">
                    <div class="fv-hero__metric">
                        <span>Autonomy</span>
                        <strong>Level 5 suites</strong>
                    </div>
                    <div class="fv-hero__metric">
                        <span>Range</span>
                        <strong>Up to 1 000 km</strong>
                    </div>
                    <div class="fv-hero__metric">
                        <span>Acceleration</span>
                        <strong>1.7s â€¢ 0-60 mph</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="fv-section fv-highlight-banner">
    <div class="container">
        <div class="row g-4">
            <div class="col-lg-6">
                <div class="fv-image-card">
                    <img src="Images/ariving.png" alt="Futuristic vehicle concept" />
                    <div class="fv-image-overlay">
                        <div class="fv-section__title">Featured concept</div>
                        <h3 class="h2 mb-3">Quantum series arriving 2030</h3>
                        <a class="fv-pill-link" asp-controller="Arriving" asp-action="Index">Explore Arriving</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="fv-image-card">
                    <img src="/Images/autonomous-intelligence.png" alt="Advanced automotive technology" />
                    <div class="fv-image-overlay">
                        <div class="fv-section__title">Innovation</div>
                        <h3 class="h2 mb-3">Autonomous intelligence redefined</h3>
                        <a class="fv-pill-link" asp-controller="Discover" asp-action="Index">Discover more</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="fv-section fv-section--contrast">
    <div class="container">
        <div class="text-center mb-5">
            <div class="fv-section__title">Why FutureV</div>
            <h2 class="fv-title-lg">Innovation meets design</h2>
        </div>
        <div class="row g-5">
            <div class="col-md-4">
                <div class="fv-feature">
                    <div class="fv-feature__title">Immersive galleries</div>
                    <p class="fv-feature__text">Orbit each vehicle with multi-angle imagery, motion-ready ratios, and curated captions that surface the design intent.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="fv-feature">
                    <div class="fv-feature__title">Spec storytelling</div>
                    <p class="fv-feature__text">Blend range, charge, and propulsion data with editorial copy to introduce concepts like a product launch moment.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="fv-feature">
                    <div class="fv-feature__title">Rapid control</div>
                    <p class="fv-feature__text">Unlock the admin deck with a single passphrase to seed prototypes, update specs, or sunset a narrative instantly.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="fv-section">
    <div class="container">
        <div class="row g-4">
            <div class="col-lg-8">
                <div class="fv-image-card fv-image-card--large">
                    <img src="/Images/electric.png" alt="Electric vehicle technology" />
                    <div class="fv-image-overlay">
                        <div class="fv-section__title">Sustainability</div>
                        <h3 class="fv-title-lg mb-3">The future is electric</h3>
                        <p class="mb-4">Experience the next generation of sustainable mobility with zero-emission propulsion systems.</p>
                        <a class="fv-btn" asp-controller="Catalog" asp-action="Index">Learn more</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="fv-image-card fv-image-card--tall">
                    <img src="/Images/crafted-interior.png" alt="Advanced vehicle interior" />
                    <div class="fv-image-overlay">
                        <div class="fv-section__title">Design</div>
                        <h3 class="h2 mb-3">Crafted interiors</h3>
                        <a class="fv-pill-link" asp-controller="Catalog" asp-action="Index">Explore</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="fv-section fv-cta-section">
    <div class="container">
        <div class="fv-image-card fv-image-card--cta">
            <img src="/Images/bottom.png" alt="Future of mobility" />
            <div class="fv-image-overlay fv-image-overlay--center">
                <h2 class="fv-title-lg mb-4">Ready to experience tomorrow?</h2>
                <p class="fv-hero__desc mx-auto mb-4" style="max-width: 560px;">Connect with a FutureV curator to discuss prototype access, investment opportunities, or technology partnerships.</p>
                <div class="d-flex gap-3 justify-content-center flex-wrap">
                    <a class="fv-btn" asp-controller="Home" asp-action="Contact">Get in touch</a>
                    <a class="fv-btn-outline" asp-controller="Catalog" asp-action="Index">Browse concepts</a>
                </div>
            </div>
        </div>
    </div>
</section>
