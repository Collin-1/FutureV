@page
@model IndexModel
@{
    ViewData["Title"] = "FutureV";
}

<section class="fv-hero fv-hero--video">
    <video class="fv-hero__video" autoplay muted loop playsinline preload="auto" aria-hidden="true">
        <source src="/videos/Futuristic Car Flies Through City.mp4" type="video/mp4" />
    </video>
    <div class="container">
        <div class="row align-items-center g-5">
            <div class="col-lg-7">
                <div class="fv-hero__content">
                    <p class="fv-hero__kicker">Neon mobility lab</p>
                    <h1 class="fv-hero__title">FutureV</h1>
                    <p class="fv-hero__desc">Experience concept vehicles shaped for orbital skylines and subterranean expressways. FutureV merges autonomous intelligence, plasma propulsion, and couture interiors into one frictionless catalog.</p>
                    <div class="fv-hero__cta">
                        <a class="fv-btn" asp-page="/Catalog/Index">View catalog</a>
                        <a class="fv-pill-link" asp-page="/Admin/Login">Admin deck</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-5">
                <div class="fv-hero__metrics">
                    <div class="fv-hero__metric">
                        <span>Autonomy</span>
                        <strong>Level 5 suites</strong>
                    </div>
                    <div class="fv-hero__metric">
                        <span>Range</span>
                        <strong>Up to 1 000 km</strong>
                    </div>
                    <div class="fv-hero__metric">
                        <span>Acceleration</span>
                        <strong>1.7s • 0-60 mph</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="fv-section">
    <div class="container">
        <div class="d-flex flex-column flex-md-row align-items-md-end justify-content-between gap-3 mb-5">
            <div>
                <div class="fv-section__title">Latest concepts</div>
                <h2 class="fv-title-lg">Carbon fibre dreams in motion</h2>
            </div>
            <a class="fv-pill-link" asp-page="/Catalog/Index">See full fleet</a>
        </div>

        @if (Model.Cars.Count == 0)
        {
            <div class="fv-pane text-center">
                <div class="fv-pane__title">No concepts live yet</div>
                <p class="fv-pane__info">Enter the <a asp-page="/Admin/Login">admin deck</a> to seed the fleet with visionary mobility.</p>
            </div>
        }
        else
        {
            <div class="fv-grid fv-grid--cards">
                @foreach (var car in Model.Cars)
                {
                    <article class="fv-card">
                        <div class="fv-card__visual">
                            @if (!string.IsNullOrEmpty(car.HeroImageSrc))
                            {
                                <img src="@car.HeroImageSrc" alt="@car.Name concept render" />
                            }
                            else
                            {
                                <div class="d-flex align-items-center justify-content-center h-100">
                                    <span class="fv-chip">Image incoming</span>
                                </div>
                            }
                        </div>
                        <div class="fv-card__body">
                            <span class="fv-chip">@car.Autonomy</span>
                            <h3 class="fv-card__title">@car.Name</h3>
                            <p class="text-muted">@car.Tagline</p>
                            <div class="fv-card__meta">
                                <span>@car.Range km range</span>
                                <span>@car.TopSpeed km/h peak</span>
                                <span>@car.ZeroToSixty s to 60</span>
                            </div>
                            <div class="fv-card__footer">
                                <span class="fv-price">@car.BasePrice.ToString("C0")</span>
                                <a class="fv-pill-link" asp-page="/Catalog/Details" asp-route-id="@car.Id">Explore</a>
                            </div>
                        </div>
                    </article>
                }
            </div>
        }
    </div>
</section>

<section class="fv-section fv-section--contrast">
    <div class="container">
        <div class="row g-5">
            <div class="col-md-4">
                <div class="fv-feature">
                    <div class="fv-feature__title">Immersive galleries</div>
                    <p class="fv-feature__text">Orbit each vehicle with multi-angle imagery, motion-ready ratios, and curated captions that surface the design intent.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="fv-feature">
                    <div class="fv-feature__title">Spec storytelling</div>
                    <p class="fv-feature__text">Blend range, charge, and propulsion data with editorial copy to introduce concepts like a product launch moment.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="fv-feature">
                    <div class="fv-feature__title">Rapid control</div>
                    <p class="fv-feature__text">Unlock the admin deck with a single passphrase to seed prototypes, update specs, or sunset a narrative instantly.</p>
                </div>
            </div>
        </div>
    </div>
</section>
