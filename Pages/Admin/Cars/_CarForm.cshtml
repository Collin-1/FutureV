@model FutureV.ViewModels.CarInputModel

<div class="row g-4">
    <div class="col-12 col-lg-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <div class="row g-3">
                    <div class="col-md-8">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="ReleaseYear" class="form-label"></label>
                        <input asp-for="ReleaseYear" class="form-control" />
                        <span asp-validation-for="ReleaseYear" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <label asp-for="Tagline" class="form-label"></label>
                        <input asp-for="Tagline" class="form-control" />
                        <span asp-validation-for="Tagline" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="BasePrice" class="form-label"></label>
                        <input asp-for="BasePrice" class="form-control" />
                        <span asp-validation-for="BasePrice" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="RangePerCharge" class="form-label"></label>
                        <input asp-for="RangePerCharge" class="form-control" />
                        <span asp-validation-for="RangePerCharge" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="TopSpeed" class="form-label"></label>
                        <input asp-for="TopSpeed" class="form-control" />
                        <span asp-validation-for="TopSpeed" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="ZeroToSixty" class="form-label"></label>
                        <input asp-for="ZeroToSixty" class="form-control" />
                        <span asp-validation-for="ZeroToSixty" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="FastChargeMinutes" class="form-label"></label>
                        <input asp-for="FastChargeMinutes" class="form-control" />
                        <span asp-validation-for="FastChargeMinutes" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="SeatingCapacity" class="form-label"></label>
                        <input asp-for="SeatingCapacity" class="form-control" />
                        <span asp-validation-for="SeatingCapacity" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="DriveType" class="form-label"></label>
                        <input asp-for="DriveType" class="form-control" />
                        <span asp-validation-for="DriveType" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="EnergySystem" class="form-label"></label>
                        <input asp-for="EnergySystem" class="form-control" />
                        <span asp-validation-for="EnergySystem" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="AutonomyLevel" class="form-label"></label>
                        <input asp-for="AutonomyLevel" class="form-control" />
                        <span asp-validation-for="AutonomyLevel" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="PowerOutput" class="form-label"></label>
                        <input asp-for="PowerOutput" class="form-control" />
                        <span asp-validation-for="PowerOutput" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <label asp-for="Narrative" class="form-label"></label>
                        <textarea asp-for="Narrative" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Narrative" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-12 col-lg-4">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h2 class="h5 mb-0">Image Gallery</h2>
                    <button type="button" class="btn btn-sm btn-outline-primary" data-add-image>
                        Add Image
                    </button>
                </div>
                <p class="text-muted">Capture front, rear, side, hover, and interior perspectives. Use a hosted URL or upload an image file for each gallery angle.</p>

                <div class="d-flex flex-column gap-3" data-image-list>
                    @for (var i = 0; i < Model.Images.Count; i++)
                    {
                        <div class="border p-3 rounded position-relative" data-image-item>
                            <input type="hidden" name="Images.Index" value="@i" />
                            <input type="hidden" asp-for="Images[i].Id" />
                            <input type="hidden" asp-for="Images[i].HasStoredImage" />
                            <div class="mb-2">
                                <label class="form-label" asp-for="Images[i].ViewAngle"></label>
                                <input class="form-control" asp-for="Images[i].ViewAngle" />
                                <span class="text-danger" asp-validation-for="Images[i].ViewAngle"></span>
                            </div>
                            <div class="mb-2">
                                <label class="form-label" asp-for="Images[i].ImageUrl"></label>
                                <input class="form-control" asp-for="Images[i].ImageUrl" />
                                <div class="form-text">Optional when uploading an image.</div>
                                <span class="text-danger" asp-validation-for="Images[i].ImageUrl"></span>
                            </div>
                            <div class="mb-2">
                                <label class="form-label" asp-for="Images[i].ImageFile"></label>
                                <input class="form-control" asp-for="Images[i].ImageFile" type="file" accept="image/*" />
                                <span class="text-danger" asp-validation-for="Images[i].ImageFile"></span>
                            </div>
                            @if (!string.IsNullOrWhiteSpace(Model.Images[i].ExistingImageSource))
                            {
                                <div class="mb-2">
                                    <div class="ratio ratio-4x3 bg-dark-subtle rounded overflow-hidden">
                                        <img src="@Model.Images[i].ExistingImageSource" class="w-100 h-100 object-fit-cover" alt="Preview of @Model.Images[i].ViewAngle image" />
                                    </div>
                                    <small class="text-muted d-block mt-2">Current image preview</small>
                                </div>
                            }
                            <div class="mb-2">
                                <label class="form-label" asp-for="Images[i].Description"></label>
                                <input class="form-control" asp-for="Images[i].Description" />
                                <span class="text-danger" asp-validation-for="Images[i].Description"></span>
                            </div>
                            <button type="button" class="btn btn-sm btn-outline-danger" data-remove-image>Remove</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

