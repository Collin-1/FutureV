@page
@model FutureV.Pages.Admin.Cars.CreateModel
@{
    ViewData["Title"] = "Add Futuristic Car";
}

<section class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
        <div>
            <h1 class="display-6 mb-0">Add Futuristic Car</h1>
            <p class="text-muted mb-0">Design the narrative, spec sheet, and gallery for a new FutureV concept.</p>
        </div>
        <div class="d-flex gap-2">
            <a class="btn btn-outline-secondary" asp-page="Index">Back to Fleet</a>
            <form method="post" asp-page="/Admin/Logout">
                <button type="submit" class="btn btn-outline-secondary">Sign out</button>
            </form>
        </div>
    </div>

    <form method="post" enctype="multipart/form-data">
        <partial name="/Pages/Admin/Cars/_CarForm.cshtml" model="Model.Car" />
        <div class="mt-4 d-flex justify-content-end gap-2">
            <a class="btn btn-light" asp-page="Index">Cancel</a>
            <button type="submit" class="btn btn-primary">Save Vehicle</button>
        </div>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <partial name="/Pages/Admin/Cars/_CarFormScripts.cshtml" />
}
